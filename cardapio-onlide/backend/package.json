{
  "name": "cardapio-backend",
  "version": "1.0.0",
  "description": "Backend Sistema de CardÃ¡pio",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "NODE_ENV=test jest --runInBand --forceExit",
    "test:watch": "NODE_ENV=test jest --watch --runInBand",
    "test:coverage": "NODE_ENV=test jest --coverage --runInBand --forceExit",
    "test:ci": "NODE_ENV=test jest --ci --coverage --watchAll=false --runInBand --forceExit --verbose",
    "test:unit": "NODE_ENV=test jest tests/unit --runInBand",
    "test:integration": "NODE_ENV=test jest tests/integration --runInBand",
    "lint": "eslint src/ tests/ --ext .js",
    "lint:fix": "eslint src/ tests/ --ext .js --fix",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "init-db": "node scripts/init-database.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.0",
    "sequelize": "^6.32.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "sqlite3": "^5.1.6",
    "eslint": "^8.45.0",
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/plugin-transform-runtime": "^7.22.0",
    "babel-jest": "^29.6.1",
    "jest-junit": "^16.0.0"
  },
  "keywords": [
    "nodejs",
    "express",
    "mysql",
    "sequelize",
    "cardapio",
    "restaurant"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "setupFiles": ["<rootDir>/tests/env-setup.js"],
    "testMatch": ["**/tests/**/*.test.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/models/index.js",
      "!src/app.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html", "json"],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "verbose": true,
    "forceExit": true,
    "detectOpenHandles": true,
    "maxWorkers": 1,
    "testTimeout": 30000,
    "clearMocks": true,
    "restoreMocks": true
  }
}